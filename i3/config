# i3 config file (v4)

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

focus_follows_mouse no

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 1
default_floating_border normal

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block.
font pango:GoogleSans Nerd Font 12
#font pango:DejaVu Sans Mono 22
#font pango:Fira Code 22

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Use "xev" to find keysym
# start a terminal
bindsym $mod+Return exec kitty

# kill focused window
bindsym $mod+q kill

# start program launcher
bindsym Menu exec rofi -show drun -theme apps.rasi

# Set Background image
exec_always feh --bg-fill ~/Pictures/wallpaper.*

# compton
exec_always --no-startup-id compton --config ~/.config/compton/compton.conf

# polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Toggle keyboard layout
exec --no-startup-id "setxkbmap -layout us,ir -option 'grp:alt_shift_toggle'"

# Lockscreen
exec --no-startup-id ~/scripts/lock.sh
bindsym $mod+Ctrl+l --release exec --no-startup-id "sleep 0.5; xset dpms force off; mantablockscreen -sc;"

# network applet
# exec --no-startup-id nm-applet &

# Enable num lock
exec_always --no-startup-id numlockx on

